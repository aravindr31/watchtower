---
export const prerender = true;
import Logo from "./Logo.astro";
import Searchbar from "./Searchbar.astro";

const path = Astro.url.pathname;
const hideNavSearch = path.includes("/movie") || path.includes("/tv") || false;
---

<nav class="nav border-b border-gray-800 sticky top-0 z-30 bg[#181A1B]">
  <div
    class="container mx-auto flex flex-col md:flex-row items-center justify-between px-4 py-6"
  >
    <ul class="flex flex-col md:flex-row items-center">
      <li>
        <a href="/" class="flex items-center font-bold text-xl">
          <Logo />
          <span> &nbsp; watch</span>
          &nbsp;
          <span class="text-orange-500">tower</span>
        </a>
      </li>
      <li class="md:ml-16 mt-3 md:mt-0">
        <a href="/movie" class="hover:text-gray-300">Movies</a>
      </li>
      <li class="md:ml-6 mt-3 md:mt-0">
        <a href="/tv" class="hover:text-gray-300">TV Shows</a>
      </li>
    </ul>
    {hideNavSearch && <Searchbar />}
  </div>
</nav>

---
export const prerender = true;
import Logo from "./Logo.astro";
import Searchbar from "./Searchbar.astro";

const path = Astro.url.pathname;
const hideNavSearch = path.includes("/movie") || path.includes("/tv") || false;
---

<nav class="nav border-b border-gray-800 sticky top-0 z-30 bg[#181A1B]">
  <div
    class="container mx-auto flex flex-col md:flex-row items-center justify-between px-4 py-6"
  >
    <ul class="flex flex-col md:flex-row items-center">
      <li>
        <a href="/" class="flex items-center font-bold text-xl">
          <Logo />
          <span> &nbsp; watch</span>
          &nbsp;
          <span class="text-[#dc3636]">tower</span>
        </a>
      </li>
      <li class="md:ml-16 mt-3 md:mt-0">
        <a href="/movie" class="hover:text-gray-300">Movies</a>
      </li>
      <li class="md:ml-6 mt-3 md:mt-0">
        <a href="/tv" class="hover:text-gray-300">TV Shows</a>
      </li>
    </ul>
    {hideNavSearch && <Searchbar />}
    <a href="/authorize">
      <svg
        class="w-8"
        viewBox="0 0 1024 1024"
        xmlns="http://www.w3.org/2000/svg"
        fill="#000000"
        ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
          id="SVGRepo_tracerCarrier"
          stroke-linecap="round"
          stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier">
          <circle cx="512" cy="512" r="512" style="fill:#dc3636"></circle>
          <path
            d="m458.15 617.7 18.8-107.3a56.94 56.94 0 0 1 35.2-101.9V289.4h-145.2a56.33 56.33 0 0 0-56.3 56.3v275.8a33.94 33.94 0 0 0 3.4 15c12.2 24.6 60.2 103.7 197.9 164.5V622.1a313.29 313.29 0 0 1-53.8-4.4zM656.85 289h-144.9v119.1a56.86 56.86 0 0 1 35.7 101.4l18.8 107.8A320.58 320.58 0 0 1 512 622v178.6c137.5-60.5 185.7-139.9 197.9-164.5a33.94 33.94 0 0 0 3.4-15V345.5a56 56 0 0 0-16.4-40 56.76 56.76 0 0 0-40.05-16.5z"
            style="fill:#fff"></path>
        </g></svg
      >
    </a>
  </div>
</nav>
